{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmit": false,
		"erasableSyntaxOnly": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
